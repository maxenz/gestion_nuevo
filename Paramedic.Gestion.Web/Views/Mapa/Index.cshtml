@{
    var medios = ViewBag.MediosDifusion;
}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row" >
                <div class="col-xs-12" style="margin-bottom: -10px">
                    <div class="widget">

                        <div class="widget-content" style="border:1px solid #8bc541 !important; padding-bottom: 20px">
                            <div class="row">
                                <div class="col-xs-12">
                                    @foreach (var item in medios)
                                    {
                                        <div class="col-xs-3">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <input type="checkbox" class="chkMediosDifusion" value="@item.Id" />
                                                </span>
                                                <input type="text" class="form-control txtMediosDifusion" readonly="true" value="@item.Descripcion" />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="widget">
                        <div class="widget-header">                      
                            <h3>Mapa</h3>
                        </div>

                        <div class="widget-content" style="padding:0 0 0">
                            <div id="map_canvas" style="width: 100%; height: 465px"></div>
                            <script>
                                initializeMapa();
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


