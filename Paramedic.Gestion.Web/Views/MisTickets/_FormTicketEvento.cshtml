
@model Paramedic.Gestion.Model.TicketEvento

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="col-xs-6 col-xs-offset-3">
                <div class="widget">
                    <div class="widget-header">
                        <h3>@ViewBag.title</h3>
                    </div>

                    @Html.HiddenFor(m => m.TicketId, new { @value = ViewBag.TicketId })

                    <div class="widget-content">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="Asunto">Asunto</label>
                                <div class="controls">
                                    <input type="text" class="col-xs-12 form-control" readonly="readonly" value="@ViewBag.TicketAsunto" />
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">@ViewBag.lastRelevantLabel</label>
                                <div class="controls">
                                    <textarea class="col-xs-12 form-control consulta" readonly="readonly">@ViewBag.lastRelevantData.Trim()</textarea>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="Descripcion">Descripci&oacute;n</label>
                                <div class="controls">
                                    @Html.TextArea("Descripcion", new { @class = "col-xs-12 form-control consulta", rows = "6", autofocus="" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="image">Imagen</label>
                                <div class="controls">
                                    <input type="file" name="image" accept="image/x-png, image/gif, image/jpeg" />
                                </div>
                            </div>

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-success btn-outline">Guardar</button>
                                <a href="@Url.Action("Index")" class="btn btn-danger btn-outline">Cancelar</a>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


