@model PagedList.IPagedList<Paramedic.Gestion.Model.Ticket>

<div class="main">
    <div class="main-inner">
        <div class="container">

            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <div class="widget">
                        <div class="widget-header">

                            <h3>Filtros</h3>
                        </div>

                        <div class="widget-content" style="margin-top: -10px; padding-bottom: 10px">
                            <form action="@Url.Action("Index")" method="get" class="searchIndex" data-gestion-ajax="true" data-gestion-target="#misTicketsList" style="margin-bottom:0px">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <div class="input-group">
                                            <input class="form-control" placeholder="Buscar..." name="searchName">
                                            <span class="input-group-btn">
                                                <button class="btn btn-success btn-outline" type="submit">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                    @if (User.IsInRole("Cliente"))
                                    {
                                        <a href="@Url.Action("Create", "MisTickets")" class="btn btn-success btn-outline">
                                            Agregar ticket
                                        </a>
                                    }
                                    <label style="display:inline-flex;margin-top:6px"><input type="checkbox" id="chkFutureFeatures" name="chkFutureFeatures" style="margin-right:10px" />Futuras Mejoras</label>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            @Html.Partial("_MisTickets", Model)

        </div>

    </div>
</div>
