@model PagedList.IPagedList<Paramedic.Gestion.Model.Ticket>
@using PagedList.Mvc;

<div class="main">
    <div class="main-inner">
        <div class="container">

            <div class="row" style="margin-top: -20px">
                <div class="col-xs-10 col-xs-offset-1">
                    <div class="widget">
                        <div class="widget-header">
                            <i class="fa fa-filter"></i>
                            <h3>Filtros</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content" style="margin-top: -10px; padding-bottom: 18px">
                            <form action="@Url.Action("Index")" method="get" class="searchIndex" data-gestion-ajax="true" data-gestion-target="#misTicketsList" style="margin-bottom:-10px">
                                <div class="row">
                                    <div class="col-xs-4">
                                        <input type="text" class=" col-xs-3" id="searchName" name="searchName" placeholder="Buscar..." style="width: 90%">
                                    </div>
                                    <div class="col-xs-3">
                                        <label style="display:inline-flex"><input type="checkbox" id="chkFutureFeatures" name="chkFutureFeatures"  style="margin-right:10px" />Futuras Mejoras</label>

                                    </div>
                                    <div class="col-xs-1">
                                        <button class="btn btn-primary btn-small btn-actions" style="width: 100%" type="submit" id="search_button" name="search_button"><i class="btn-icon-only fa fa-search"></i></button>
                                    </div>
                                    <div class="col-xs-1">
                                        @if (User.IsInRole("Cliente"))
                                        {
                                            <a href="@Url.Action("Create", "MisTickets")" class="btn btn-primary btn-small btn-actions" style="width:80%" id="new_button">
                                                <i class="btn btn-icon-only fa fa-plus"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </form>
                            <!-- /bar-chart -->
                        </div>
                        <!-- /widget-content -->
                    </div>
                </div>
            </div>
            @Html.Partial("_MisTickets", Model)

        </div>
        <!-- /main-inner -->
    </div>
</div>


