@using System.Web.Mvc.Html;
@using Paramedic.Gestion.Web.HtmlHelpers;
@model PagedList.IPagedList<Paramedic.Gestion.Model.Ticket>
@using PagedList.Mvc;

<div id="misTicketsList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1" style="margin-bottom: -30px">
            <div class="widget widget-table action-table">
                <div class="widget-header">

                    <h3>Tickets</h3>
                </div>

                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-3">@Html.DisplayNameFor(model => model.FirstOrDefault().UpdatedDate) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.FirstOrDefault().Usuario)</th>
                                @*<th class="col-xs-2">@Html.DisplayNameFor(model => model.FirstOrDefault().Cliente) </th>*@
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.FirstOrDefault().Asunto) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.FirstOrDefault().Asunto) </th>
                                <th class="col-xs-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Usuario.UserName)
                                    </td>
                                    @*<td>
                                            @Html.ActionLink(item.Cliente, "Edit", "Clientes", new { id = item.ClienteID }, null)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Asunto)
                                    </td>

                                    @TicketHtmlHelper.getTicketState(item.TicketEstadoType)

                                    <td class="centrado">
                                        <a href="MisTickets/Edit/@item.Id" class="btn btn-small btn-success btn-actions"><i class="btn btn-icon-only fa fa-edit"></i></a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
    <div class="pagedList centered" data-gestion-target="#misTicketsList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>

