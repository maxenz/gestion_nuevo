@model PagedList.IPagedList<Paramedic.Gestion.Model.Provincia>
@using PagedList.Mvc;

<div id="provinciasList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="widget widget-table action-table" style="margin-bottom:0">
                <div class="widget-header">

                    <h3>Provincias</h3>
                </div>

                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Codigo) </th>
                                <th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                                <th class="col-xs-1"></th>
                                <th class="col-xs-1"></th>
                                <th class="col-xs-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Codigo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Index",string.Format("Paises/{0}/Provincias/{1}/Localidades", item.Pais.Id, item.Id))" class="btn btn-small btn-success btn-actions">
                                            <i class="btn-icon-only fa fa-search"></i>
                                        </a>
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Edit", "Provincias", new { id = item.Id })" class="btn btn-small btn-success btn-actions">
                                            <i class="btn-icon-only fa fa-edit"></i>
                                        </a>
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Delete","Provincias", new { id = item.Id })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#provinciasList">
                                            <i class="btn-icon-only fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="pagedList centered" data-gestion-target="#provinciasList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>

</div>
