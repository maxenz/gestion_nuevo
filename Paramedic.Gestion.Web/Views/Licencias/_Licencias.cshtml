@model PagedList.IPagedList<Paramedic.Gestion.Model.Licencia>
@using PagedList.Mvc;

<div id="licenciasList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="widget widget-table action-table" style="margin-bottom:0">
                <div class="widget-header">

                    <h3>Licencias</h3>
                </div>

                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Serial) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().NumeroDeLlave)</th>
                                <th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Estado) </th>
                                <th class="col-xs-1"></th>
                                <th class="col-xs-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Serial)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumeroDeLlave)
                                    </td>
                                    <td>
                                        @if (item.Estado == null)
                                        {
                                            <span style="color: green; font-weight: bold">
                                                SIN ASIGNAR
                                            </span>
                                        }
                                        else
                                        {
                                            <span style="color: red; font-weight: bold">
                                                ASIGNADA A @item.Estado
                                            </span>
                                        }
                                    </td>

                                    <td class="centrado">
                                        <a href="@Url.Action("Edit", "Licencias", new { id = item.Id })" class="btn btn-small btn-success btn-actions">
                                            <i class="btn-icon-only fa fa-edit"></i>
                                        </a>
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Delete","Licencias", new { id = item.Id })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#licenciasList">
                                            <i class="btn-icon-only fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="pagedList centered" data-gestion-target="#licenciasList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>