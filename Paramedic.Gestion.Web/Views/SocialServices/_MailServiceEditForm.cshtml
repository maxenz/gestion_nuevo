@model Paramedic.Gestion.Web.ViewModels.MailSocialServiceViewModel

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="col-xs-6 col-xs-offset-3">
                <div class="widget">
                    <div class="widget-header">
                        <h3>Registro de servicio de comunicación</h3>
                    </div>

                    <div class="widget-content">
                        <fieldset>

                            @Html.Partial("_ServiceBasicData", Model)

                            <div class="control-group">
                                @Html.LabelFor(model => model.MailServiceSettings.UserName, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.MailServiceSettings.UserName, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.MailServiceSettings.UserName)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.MailServiceSettings.Password, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.MailServiceSettings.Password, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.MailServiceSettings.Password)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.MailServiceSettings.Smtp, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.MailServiceSettings.Smtp, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.MailServiceSettings.Smtp)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.MailServiceSettings.SmtpPort, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.MailServiceSettings.SmtpPort, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.MailServiceSettings.SmtpPort)
                                </div>
                            </div>

                            <div class="control-group" id="sslEnabled">
                                @Html.LabelFor(model => model.MailServiceSettings.EnableSsl, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.EditorFor(model => model.MailServiceSettings.EnableSsl)
                                </div>
                            </div>

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-success btn-outline">Guardar</button>
                                <a href="@Url.Action("Index")" class="btn btn-danger btn-outline">Cancelar</a>
                            </div>

                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


