@model Paramedic.Gestion.Web.ViewModels.SocialServicesViewModel

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="col-xs-6 col-xs-offset-3">
                <div class="widget">
                    <div class="widget-header">
                        <h3>Registro de servicio de comunicación</h3>
                    </div>

                    <div class="widget-content">
                        <fieldset>

                            <div class="control-group">
                                <label class="control-label">Canal de comunicación</label>
                                <div class="controls">
                                   @Html.DropDownList("SocialServiceTypeId", (SelectList)ViewBag.SocialServiceTypes, new { @class = "col-xs-12 form-control" }, (bool)ViewBag.IsCreateForm)
                                </div>
                            </div>

                            <div class="control-group" id="socialServiceEnabled">
                                @Html.LabelFor(model => model.Enabled, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.EditorFor(model => model.Enabled)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Descripción</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Description, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-success btn-outline">Guardar</button>
                                <a href="@Url.Action("Index")" class="btn btn-danger btn-outline">Cancelar</a>
                            </div>

                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



