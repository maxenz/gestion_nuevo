@model Paramedic.Gestion.Model.TicketsClasificacion
<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="col-xs-6 col-xs-offset-3">
                <div class="widget">
                    <div class="widget-header">

                        <h3>Registro de Clasificaciones de consultas</h3>
                    </div>
                    <div class="widget-content">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label">Descripción</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Descripcion, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Descripcion)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Color</label>
                                <div class="controls">
                                    <div id="colorpickerTicketsClasificaciones" class="input-group colorpicker-component">
                                        @Html.TextBoxFor(model => model.Color, new { @class = "form-control col-xs-12", @Value = (Model == null) ? "#000000" : Model.Color.ToString() })
                                        <span class="input-group-addon"><i></i></span>
                                    </div>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Usuarios</label>
                                <div class="controls">
                                    @Html.ListBox("UsersList", (MultiSelectList)ViewBag.Users, new { size = 8 })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Alta Prioridad?</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.AltaPrioridad)
                                </div>
                            </div>

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-success btn-outline">Guardar</button>
                                <a href="@Url.Action("Index", "TicketsClasificaciones")" class="btn btn-danger btn-outline">Cancelar</a>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




