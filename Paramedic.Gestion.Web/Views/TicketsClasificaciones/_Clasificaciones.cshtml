@model PagedList.IPagedList<Paramedic.Gestion.Model.TicketsClasificacion>
@using PagedList.Mvc;

<div id="ticketsClasificacionesList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="widget widget-table action-table" style="margin-bottom:0">
                <div class="widget-header">

                    <h3>Clasificaciones de las consultas</h3>
                </div>

                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-4">@Html.DisplayNameFor(model => model.First().Descripcion) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().AltaPrioridad)</th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Color)</th>
                                <th class="col-xs-1"></th>
                                <th class="col-xs-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td class="centrado">
                                        @Html.DisplayFor(modelItem => item.AltaPrioridad)
                                    </td>
                                    <td style="background-color:@item.Color">
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Edit", "TicketsClasificaciones", new { id = item.Id })" class="btn btn-small btn-success btn-actions">
                                            <i class="btn-icon-only fa fa-edit"></i>
                                        </a>
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Delete","TicketsClasificaciones", new { id = item.Id })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#ticketsClasificacionesList">
                                            <i class="btn-icon-only fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <div class="pagedList centered" data-gestion-target="#ticketsClasificacionesList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>