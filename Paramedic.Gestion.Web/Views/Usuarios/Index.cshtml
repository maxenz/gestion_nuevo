@model PagedList.IPagedList<Gestion.Models.Usuario>
@using PagedList.Mvc; 

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row" >
                <div class="col-xs-10 col-xs-offset-1">
                    <div class="widget">
                        <div class="widget-header">
                            
                            <h3>Filtros</h3>
                        </div>
                        <div class="widget-content" style="margin-top: -10px; padding-bottom: 10px">
                            <form action="@Url.Action("Index")" method="get" class="searchIndex" data-gestion-ajax="true" data-gestion-target="#usuariosList" style="margin-bottom:-10px">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <input type="text" class="form-control" id="searchName" name="searchName" placeholder="Buscar..." style="width:90%">
                                    </div>
                                    <div class="col-xs-1">
                                        <button class="btn btn-primary btn-small btn-actions" style="width:100%" type="submit" id="search_button" name="search_button"><i class="btn-icon-only fa fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("_Usuarios", Model)

        </div>
    </div>
</div>
