@model PagedList.IPagedList<Gestion.Models.Usuario>
@using PagedList.Mvc;

<div id="usuariosList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="widget widget-table action-table">
                <div class="widget-header">
                    
                    <h3>Usuarios</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Descripcion) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Nombre)</th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Apellido) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Email) </th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Apellido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        <a href="Usuarios/Edit/@item.ID" class="btn btn-small btn-success btn-actions"><i class="btn-icon-only icon-ok"> </i></a>
                                    </td>
                                    <td>
                                        <a href="Usuarios/Delete/@item.ID" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#usuariosList"><i class="btn-icon-only icon-delete"> </i></a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- /widget-content -->
            </div>

        </div>
    </div>
    <div class="row">
        <div class="pagedList col-xs-7 col-xs-offset-5" data-gestion-target="#usuariosList">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>

        <!-- /row -->
    </div>
</div>
<!-- /container -->
