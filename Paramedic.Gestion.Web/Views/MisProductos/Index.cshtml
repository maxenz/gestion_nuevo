@model IList<Gestion.Models.ClientesLicenciasProducto>
<div class="row">
    <div class="span6 offset3">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-bookmark"></i>
                <h3>Productos Disponibles</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="shortcuts">
                    @foreach (var item in Model)
                    {
                        <a href="@item.ClientesLicencia.FullUrl" target="_blank" class="shortcut"><i class="shortcut-icon icon-list-alt"></i><span class="shortcut-label">@item.Producto.Descripcion</span> </a>
                    }

                </div>
                <!-- /shortcuts -->
            </div>
            <!-- /widget-content -->
        </div>
    </div>
</div>






