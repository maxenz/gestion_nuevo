@model PagedList.IPagedList<Paramedic.Gestion.Web.ViewModels.ClienteViewModel>
@using PagedList.Mvc;

<div id="clientesList">
    <div class="row">
        <div class="col-xs-12 " style="margin-bottom: -30px">
            <div class="widget widget-table action-table">
                <div class="widget-header">
                    <h3>Clientes</h3>
                </div>

                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().RazonSocial) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Email)</th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Telefono) </th>
                                <th class="col-xs-1">@Html.DisplayNameFor(model => model.First().Pais) </th>
                                <th class="col-xs-1">@Html.DisplayNameFor(model => model.First().Provincia) </th>
                                <th class="col-xs-1">@Html.DisplayNameFor(model => model.First().Localidad) </th>
                                <th class="col-xs-1"></th>
                                <th class="col-xs-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RazonSocial)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pais)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Provincia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Localidad)
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Edit", "Clientes", new { id = item.Id })" class="btn btn-small btn-success btn-actions">
                                            <i class="btn-icon-only fa fa-edit"></i>
                                        </a>
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Delete","Clientes", new { id = item.Id })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#clientesList">
                                            <i class="btn-icon-only fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <div class="pagedList centered" data-gestion-target="#clientesList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
