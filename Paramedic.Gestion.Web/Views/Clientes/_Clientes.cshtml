@model PagedList.IPagedList<Gestion.ViewModels.ClientesPrincipal>
@using PagedList.Mvc;

<div id="clientesList">
    <div class="row">
        <div class="span12 " style="margin-bottom: -30px">
            <div class="widget widget-table action-table">
                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3>Clientes</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="span2">@Html.DisplayNameFor(model => model.First().RazonSocial) </th>
                                <th class="span2">@Html.DisplayNameFor(model => model.First().Email)</th>
                                <th class="span2">@Html.DisplayNameFor(model => model.First().Telefono) </th>
                                <th class="span1">@Html.DisplayNameFor(model => model.First().Pais) </th>
                                <th class="span1">@Html.DisplayNameFor(model => model.First().Provincia) </th>
                                <th class="span1">@Html.DisplayNameFor(model => model.First().Localidad) </th>
                                <th class="span1"></th>
                                <th class="span1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RazonSocial)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pais)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Provincia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Localidad)
                                    </td>
                                    <td class="centrado">
                                        <a href="Clientes/Edit/@item.ID" class="btn btn-small btn-success btn-actions"><i class="btn-icon-only icon-pencil"></i></a>
                                    </td>
                                    <td class="centrado">
                                        <a href="Clientes/Delete/@item.ID" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#clientesList"><i class="btn-icon-only icon-remove"></i></a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- /widget-content -->
            </div>

        </div>
    </div>
    <div class="row">
        <div class="pagedList span7 offset4" data-gestion-target="#clientesList">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>

        <!-- /row -->
    </div>
</div>
<!-- /container -->
