@model Paramedic.Gestion.Model.ClientesContacto

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="col-xs-6 col-xs-offset-3">
                <div class="widget">
                    <div class="widget-header">

                        <h3>Registro de Contacto</h3>
                    </div>
                    <div class="widget-content">
                        <fieldset>

                            <div class="control-group">
                                @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Nombre, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Nombre)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.Telefono, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Telefono, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Telefono)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.Otros, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Otros, new { @class = "col-xs-12 form-control", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Otros)
                                </div>
                            </div>

                            <div class="control-group" style="margin-left:5px">
                                @Html.LabelFor(model => model.esInstitucional, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.EditorFor(model => model.esInstitucional, new { @class = "col-xs-12 form-control" })
                                    @Html.ValidationMessageFor(model => model.esInstitucional)
                                </div>
                            </div>

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-success btn-outline">Guardar</button>
                                <a href="@Url.Action("Clientes","Edit", new { id = ViewBag.ClienteId })" class="btn btn-danger btn-outline">Cancelar</a>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
