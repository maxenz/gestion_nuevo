@model Paramedic.Gestion.Model.Estado

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="col-xs-6 col-xs-offset-3">
                    <div class="widget">
                        <div class="widget-header">
                            
                            <h3>Registro de Estados</h3>
                        </div>
                        <div class="widget-content">
                            <fieldset>
                                <div class="control-group">
                                    <label class="control-label" for="Numero">N&uacute;mero</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Numero, new { @class = "col-xs-12 form-control", autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Numero)
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="Descripcion">Descripci&oacute;n</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "col-xs-12 form-control", autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Descripcion)
                                    </div>
                                </div>

                                <br>

                                <div class="form-actions">
                                    <button type="submit" class="btn btn-success btn-outline">Guardar</button>
                                    <a href="@Url.Action("Index", "Estados")" class="btn btn-danger btn-outline">Cancelar</a>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>



