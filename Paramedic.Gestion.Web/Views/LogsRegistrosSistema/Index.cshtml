@model PagedList.IPagedList<Paramedic.Gestion.Model.LogRegistroSistema>

<div class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="col-xs-10 col-xs-offset-1">
					<div class="widget">
						<div class="widget-header">
							<h3>Filtros</h3>
						</div>
						<div class="widget-content" style="margin-top: -10px; padding-bottom: 10px">
							<form action="@Url.Action("Index")" id="formSearchLogs" method="get" class="searchIndex" data-gestion-ajax="true" data-gestion-target="#logsRegistroSistemaList" style="margin-bottom:-10px">
								<div class="row">
									<div class="col-xs-6">
										<div class="input-group">
											<input class="form-control" placeholder="Buscar..." name="searchName">
											<span class="input-group-btn">
												<button class="btn btn-success btn-outline" type="submit">
													<i class="fa fa-search"></i>
												</button>
											</span>
										</div>
									</div>
									<div class="col-xs-2">
										<input type="text" class="form-control datepicker centered" id="fechaDesde" name="fechaDesde" value="@DateTime.Now.AddDays(-3).ToShortDateString()" data-date-format="dd/mm/yyyy" style="width:100%">
									</div>
									<div class="col-xs-2">
										<input type="text" class="form-control datepicker centered" id="fechaHasta" name="fechaHasta" value="@DateTime.Now.ToShortDateString()" data-date-format="dd/mm/yyyy" style="width:100%">
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			@Html.Partial("_Logs", Model)
		</div>
	</div>
</div>
