@model PagedList.IPagedList<Gestion.Models.Sitio>
@using PagedList.Mvc;

<div id="sitiosList">
    <div class="row">
        <div class="span10 offset1">
            <div class="widget widget-table action-table" style="margin-bottom:0">
                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3>Sitios</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="span3">@Html.DisplayNameFor(model => model.First().Descripcion) </th>
                                <th class="span3">@Html.DisplayNameFor(model => model.First().Url)</th>
                                <th class="span1"></th>
                                <th class="span1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Url)
                                    </td>

                                    <td class="centrado">
                                        <a href="Sitios/Edit/@item.ID" class="btn btn-small btn-success btn-actions"><i class="btn-icon-only icon-pencil"> </i></a>
                                    </td>
                                    <td class="centrado">
                                        <a href="Sitios/Delete/@item.ID" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#sitiosList"><i class="btn-icon-only icon-remove"> </i></a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- /widget-content -->
            </div>

        </div>
    </div>
    <div class="row">
        <div class="pagedList span7 offset5" data-gestion-target="#sitiosList">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>

        <!-- /row -->
    </div>
</div>
<!-- /container -->
