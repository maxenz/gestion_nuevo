@model IList<Paramedic.Gestion.Model.ClientesGestion>

<div id="clientesGestionesList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <table class="table table-hover table-striped table-bordered tableIndex" id="tbGestion">
                <thead>
                    <tr>
                        <th class="col-xs-2 centrado">
                            @Html.DisplayNameFor(model => model.First().Fecha)
                        </th>
                        <th class="col-xs-2 centrado">
                            @Html.DisplayNameFor(model => model.First().Estado.Descripcion)
                        </th>
                        <th class="col-xs-4 centrado">
                            @Html.DisplayNameFor(model => model.First().Observaciones)
                        </th>
                        <th class="col-xs-2 centrado">
                            @Html.DisplayNameFor(model => model.First().FechaRecontacto)
                        </th>

                        <th class="col-xs-1 centrado">PDF</th>
                        <th class="col-xs-1 centrado"></th>
                        <th class="col-xs-1 centrado"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-xs-2 centrado">
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td class="col-xs-2 centrado">
                                @Html.DisplayFor(modelItem => item.Estado.Descripcion)
                            </td>
                            <td class="col-xs-4 centrado">
                                @Html.DisplayFor(modelItem => item.Observaciones)
                            </td>
                            <td class="col-xs-2 centrado">
                                @Html.DisplayFor(modelItem => item.FechaRecontacto)
                            </td>
                            <td class="col-xs-1 centrado">
                                @if (item.PdfGestion != null)
                                {
                                    <a href="@Url.Action("PdfDisplay", "ClientesGestiones", new { id = item.Id, clienteId = item.ClienteId })" target="_blank">
                                        <i class="icon-list-alt azulOscuro"></i>
                                    </a>
                                }
                            </td>
                            <td class="centrado">
                                <a href="@Url.Action("Edit", "ClientesGestiones", new { id = item.Id, clienteId = item.ClienteId })" class="btn btn-small btn-success btn-actions">
                                    <i class="btn-icon-only fa fa-edit"></i>
                                </a>
                            </td>
                            <td class="centrado">
                                <a href="@Url.Action("Delete","ClientesGestiones", new { id = item.Id, clienteId = item.ClienteId })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#clientesGestionesList">
                                    <i class="btn-icon-only fa fa-times"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

            <div class="centered">

                <a href="@Url.Action("Create", "ClientesGestiones",new { ClienteId = ViewBag.ClienteId })" class="btn btn-success btn-outline btnSubmit">
                    Agregar Gesti&oacute;n
                </a>

            </div>
        </div>
    </div>
</div>