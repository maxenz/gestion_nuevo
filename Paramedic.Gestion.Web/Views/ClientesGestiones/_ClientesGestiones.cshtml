@model IList<Gestion.Models.ClientesGestion>

<div id="clientesGestionesList">
                    <div class="row">
                        <div class="span10 offset1">
                            <table class="table table-hover table-striped table-bordered tableIndex" id="tbGestion">
                                <thead>
                                    <tr>
                                        <th class="span2 centrado">
                                            @Html.DisplayNameFor(model => model.First().Fecha)
                                        </th>
                                        <th class="span2 centrado">
                                            @Html.DisplayNameFor(model => model.First().Estado.Descripcion)
                                        </th>
                                        <th class="span4 centrado">
                                            @Html.DisplayNameFor(model => model.First().Observaciones)
                                        </th>
                                        <th class="span2 centrado">
                                            @Html.DisplayNameFor(model => model.First().FechaRecontacto)
                                        </th>

                                        <th class="span1 centrado">PDF</th>
                                        <th class="span1 centrado"></th>
                                        <th class="span1 centrado"></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="span2 centrado">
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                            <td class="span2 centrado">
                                                @Html.DisplayFor(modelItem => item.Estado.Descripcion)
                                            </td>
                                            <td class="span4 centrado">
                                                @Html.DisplayFor(modelItem => item.Observaciones)
                                            </td>
                                            <td class="span2 centrado">
                                                @Html.DisplayFor(modelItem => item.FechaRecontacto)
                                            </td>
                                            <td class="span1 centrado">
                                                @if (item.PdfGestion != null)
                                                {
                                                    <a href="@item.ClienteID/ClientesGestiones/PDFDisplay/@item.ID" target="_blank"><i class="icon-list-alt azulOscuro"></i></a>
                                                }
                                            </td>
                                            <td class="centrado">
                                                <a href="@item.ClienteID/ClientesGestiones/Edit/@item.ID" class="btn btn-small btn-success btn-actions"><i class="btn-icon-only icon-pencil"> </i></a>
                                            </td>
                                            <td class="centrado">
                                                <a href="@item.ClienteID/ClientesGestiones/Delete/@item.ID" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#clientesGestionesList"><i class="btn-icon-only icon-remove"> </i></a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <div class="row">

                                <div class="span4 offset4 ">
                                    <a href="@ViewBag.Cliente_ID/ClientesGestiones/Create" class="btn btn-block  btn-primary btnSubmit btn-actions">Agregar Gesti&oacute;n</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>