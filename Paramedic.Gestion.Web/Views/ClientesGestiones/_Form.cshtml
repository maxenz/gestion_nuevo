@model Paramedic.Gestion.Model.ClientesGestion

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="span6 offset3">
                <div class="widget">
                    <div class="widget-header">
                        <i class="icon-key"></i>
                        <h3>Registro de Gestiones</h3>
                    </div>
                    <div class="widget-content">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="Estado">Estado</label>
                                <div class="controls">
                                    @Html.DropDownListFor(model => model.EstadoId, new SelectList(ViewBag.Estados, "ID", "Descripcion"), new { @class = "span5" })
                                    @Html.ValidationMessageFor(model => model.EstadoId)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="Fecha">Fecha</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Fecha, "{0:dd/MM/yyyy}", new { @class = "span5 datepicker" })
                                    @Html.ValidationMessageFor(model => model.Fecha)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="FechaRecontacto">Fecha de Recontacto</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.FechaRecontacto, "{0:dd/MM/yyyy}", new { @class = "span5 datepicker" })
                                    @Html.ValidationMessageFor(model => model.FechaRecontacto)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="pdfDoc">Subir Pdf</label>
                                <div class="controls">
                                    <input type="file" name="pdfDoc" accept="application/pdf" />
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="Observaciones">Observaciones</label>
                                <div class="controls">
                                    @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control", rows = 5,style="width:100%" })
                                    @Html.ValidationMessageFor(model => model.Observaciones)
                                </div>
                            </div>

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary btn-actions">Guardar</button>
                                <button class="btn">Cancelar</button>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


