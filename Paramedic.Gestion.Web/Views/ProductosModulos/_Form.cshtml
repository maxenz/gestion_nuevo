@model Paramedic.Gestion.Model.ProductosModulo

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="col-xs-6 col-xs-offset-3">
                <div class="widget">
                    <div class="widget-header">
                        <i class="fa fa-key"></i>
                        <h3>Registro de M&oacute;dulos</h3>
                    </div>
                    <div class="widget-content">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="Codigo">C&oacute;digo</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Codigo, new { @class = "col-xs-5", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Codigo)
                                </div> 
                            </div> 

                            <div class="control-group">
                                <label class="control-label" for="Descripcion">Descripci&oacute;n</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Descripcion, new { @class = "col-xs-5", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Descripcion)
                                </div> 
                            </div> 

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary btn-actions">Guardar</button>
                                <button class="btn">Cancelar</button>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



