@model PagedList.IPagedList<Paramedic.Gestion.Model.ProductosModulo>
@using PagedList.Mvc;

<div id="productosmodulosList">
    <div class="row">
        <div class="span10 offset1">
            <div class="widget widget-table action-table" style="margin-bottom:0">
                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3>M&oacute;dulos</h3>
                </div>

                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="span2">@Html.DisplayNameFor(model => model.First().Codigo) </th>
                                <th class="span5">@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                                <th class="span1"></th>
                                <th class="span1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Codigo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Edit", "ProductosModulos", new { id = item.Id, productId = item.ProductoId })" class="btn btn-small btn-success btn-actions">
                                            <i class="btn-icon-only icon-pencil"></i>
                                        </a>
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Delete","ProductosModulos", new { id = item.Id, productId = item.ProductoId })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#productosmodulosList">
                                            <i class="btn-icon-only icon-remove"></i>
                                        </a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
    <div class="row">
        <div class="pagedList span7 offset5" data-gestion-target="#productosmodulosList">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>

    </div>
</div>
