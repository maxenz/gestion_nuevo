@model PagedList.IPagedList<Paramedic.Gestion.Model.ProductosModulo>
@using PagedList.Mvc;

<div id="productosmodulosList">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="widget widget-table action-table" style="margin-bottom:0">
				<div class="widget-header">

					<h3>M&oacute;dulos</h3>
				</div>

				<div class="widget-content">
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th class="col-xs-1">@Html.DisplayNameFor(model => model.First().Codigo) </th>
								<th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Descripcion)</th>
								<th class="col-xs-3">@Html.DisplayNameFor(model => model.First().DescripcionAddon)</th>
								<th class="col-xs-2">@Html.DisplayNameFor(model => model.First().PathImagenAddon)</th>
								<th class="col-xs-1"></th>
								<th class="col-xs-1"></th>
								<th class="col-xs-1"></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td class="centered">
										@Html.DisplayFor(modelItem => item.Codigo)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Descripcion)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.DescripcionAddon)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PathImagenAddon)
									</td>
									<td class="centrado">
										<a href="@Url.Action("Index",string.Format("Productos/{0}/ProductosModulos/{1}/Intentos", item.Producto.Id, item.Id))" class="btn btn-small btn-success btn-actions">
											<i class="btn-icon-only fa fa-search"></i>
										</a>
									</td>
									<td class="centrado">
										<a href="@Url.Action("Edit", "ProductosModulos", new { id = item.Id })" class="btn btn-small btn-success btn-actions">
											<i class="btn-icon-only fa fa-edit"></i>
										</a>
									</td>
									<td class="centrado">
										<a href="@Url.Action("Delete","ProductosModulos", new { id = item.Id })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#productosmodulosList">
											<i class="btn-icon-only fa fa-times"></i>
										</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>

			</div>

		</div>
	</div>
	<div class="pagedList centered" data-gestion-target="#productosmodulosList">
		@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
	</div>
</div>
