@model IList<Paramedic.Gestion.Model.ProductosModulosIntento>

<div id="intentosList">
	<div class="row">
		<div class="col-xs-12">
			<div class="widget widget-table action-table" style="margin-bottom:0">
				<div class="widget-header">
					<h3>Intentos</h3>
				</div>

				<div class="widget-content">
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Orden) </th>
								<th class="col-xs-5">@Html.DisplayNameFor(model => model.First().Dias)</th>
								<th class="col-xs-1"></th>
								<th class="col-xs-1"></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Orden)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Dias)
									</td>
									<td class="centrado">
										<a href="@Url.Action("EditIntento", "ProductosModulos", new { id = item.Id, productoModuloId = item.ProductosModuloId })" class="btn btn-small btn-success btn-actions">
											<i class="btn-icon-only fa fa-edit"></i>
										</a>
									</td>
									<td class="centrado">
										<a href="@Url.Action("DeleteIntento","ProductosModulos", new { id = item.Id })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#intentosList">
											<i class="btn-icon-only fa fa-times"></i>
										</a>
									</td>
								</tr>

							}

						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>

	<div class="row">
		<a href="@Url.Action("AddIntento")" id="btnAddIntento" class="btn btn-success btn-outline">Agregar Intento</a>
	</div>

	<hr/>

</div>