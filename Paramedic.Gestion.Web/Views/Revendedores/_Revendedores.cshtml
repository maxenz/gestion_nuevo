@model PagedList.IPagedList<Paramedic.Gestion.Model.Revendedor>
@using PagedList.Mvc;

<div id="revendedoresList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="widget widget-table action-table" style="margin-bottom:0">
                <div class="widget-header">
                    <h3>Estados</h3>
                </div>

                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-5">@Html.DisplayNameFor(model => model.First().Nombre) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Comision)</th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().BajoContrato)</th>
                                <th class="col-xs-1"></th>
                                <th class="col-xs-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Comision)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BajoContrato)
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Edit", "Revendedores", new { id = item.Id })" class="btn btn-small btn-success btn-actions">
                                            <i class="btn-icon-only fa fa-edit"></i>
                                        </a>
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Delete","Revendedores", new { id = item.Id })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#revendedoresList">
                                            <i class="btn-icon-only fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <div class="pagedList centered" data-gestion-target="#revendedoresList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>

</div>
<!-- /container -->
