@model PagedList.IPagedList<Paramedic.Gestion.Model.Revendedor>
@using PagedList.Mvc;

<div id="revendedoresList">
    <div class="row">
        <div class="span10 offset1">
            <div class="widget widget-table action-table" style="margin-bottom:0">
                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3>Estados</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="span5">@Html.DisplayNameFor(model => model.First().Nombre) </th>
                                <th class="span2">@Html.DisplayNameFor(model => model.First().Comision)</th>
                                <th class="span2">@Html.DisplayNameFor(model => model.First().BajoContrato)</th>
                                <th class="span1"></th>
                                <th class="span1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Comision)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BajoContrato)
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Edit", "Revendedores", new { id = item.Id })" class="btn btn-small btn-success btn-actions">
                                            <i class="btn-icon-only icon-pencil"></i>
                                        </a>
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Delete","Revendedores", new { id = item.Id })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#revendedoresList">
                                            <i class="btn-icon-only icon-remove"></i>
                                        </a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- /widget-content -->
            </div>

        </div>
    </div>
    <div class="row">
        <div class="pagedList span7 offset5" data-gestion-target="#revendedoresList">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>

        <!-- /row -->
    </div>
</div>
<!-- /container -->
