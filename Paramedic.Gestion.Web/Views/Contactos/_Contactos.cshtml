@model PagedList.IPagedList<Paramedic.Gestion.Model.ClientesContacto>
@using PagedList.Mvc;

<div id="contactosList">
	<div class="row">
		<div class="col-xs-12">
			<div class="widget widget-table action-table">
				<div class="widget-header">
					<h3>Usuarios</h3>
				</div>
				<div class="widget-content">
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Cliente.RazonSocial) </th>
								<th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Nombre)</th>
								<th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Email) </th>
								<th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Telefono) </th>
								<th class="col-xs-1">@Html.DisplayNameFor(model => model.First().flgPrincipal) </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td class="col-xs-3">
										@Html.DisplayFor(modelItem => item.Cliente.RazonSocial)
									</td>
									<td class="col-xs-2">
										@Html.DisplayFor(modelItem => item.Nombre)
									</td>
									<td class="col-xs-3">
										@Html.DisplayFor(modelItem => item.Email)
									</td>
									<td class="col-xs-3">
										@Html.DisplayFor(modelItem => item.Telefono)
									</td>
									<td class="col-xs-1 centrado">
										@{
											if (item.flgPrincipal == 1)
											{
												<i class="fa fa-star"></i>
											}
										}
									</td>
								</tr>
											}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="pagedList centered" data-gestion-target="#contactosList">
		@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
	</div>
</div>

