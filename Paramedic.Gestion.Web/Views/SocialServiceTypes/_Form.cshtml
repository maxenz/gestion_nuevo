@model Paramedic.Gestion.Web.ViewModels.SocialServiceTypesViewModel

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="col-xs-6 col-xs-offset-3">
                <div class="widget">
                    <div class="widget-header">
                        <h3>Registro de canal de comunicación</h3>
                    </div>

                    <div class="widget-content">
                        <fieldset>

                            <div class="control-group">
                                <label class="control-label">Tipo de servicio</label>
                                <div class="controls">
                                    @Html.EnumDropDownListFor(
                                        model => model.SocialMediaType,
                                        "Seleccione tipo de servicio",
                                        new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="control-group" id="socialServiceTypeEnabled">
                                @Html.LabelFor(model => model.Enabled, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.EditorFor(model => model.Enabled)
                                </div>
                            </div>

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-success btn-outline">Guardar</button>
                                <a href="@Url.Action("Index")" class="btn btn-danger btn-outline">Cancelar</a>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



