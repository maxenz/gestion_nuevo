@model PagedList.IPagedList<Gestion.ViewModels.LogPrincipal>
@using PagedList.Mvc;


<div id="logsList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="widget widget-table action-table">
                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3>Logs</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Cliente) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Serial)</th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().FechaHora) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().IP) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Referencia) </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(Html.Raw(item.ClienteID == 0 ? item.Cliente : "<a href=\"/Clientes/Edit/" + item.ClienteID + "\">" + item.Cliente + "</a>"))
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Serial)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaHora)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Referencia)
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- /widget-content -->
            </div>

        </div>
    </div>
    <div class="row">
        <div class="pagedList col-xs-7 col-xs-offset-3" data-gestion-target="#logsList">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>

        <!-- /row -->
    </div>
</div>
<!-- /container -->










