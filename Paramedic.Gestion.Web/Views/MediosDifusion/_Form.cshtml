@model Paramedic.Gestion.Model.MedioDifusion

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="span6 offset3">
                <div class="widget">
                    <div class="widget-header">
                        <i class="fa fa-key"></i>
                        <h3>Registro de Medios de Difusi&oacute;n</h3>
                    </div>
                    <div class="widget-content">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="Descripcion">Descripci&oacute;n</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Descripcion, new { @class = "span5", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Descripcion)
                                </div> <!-- /controls -->
                            </div> <!-- /control-group -->

                            <div class="control-group">
                                <label class="control-label" for="Descripcion">Visible en mapa?</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.MapaVisible, new { @class = "span5"})
                                    @Html.ValidationMessageFor(model => model.MapaVisible)
                                </div> <!-- /controls -->
                            </div> <!-- /control-group -->

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary btn-actions">Guardar</button>
                                <a href="@Url.Action("Index", "MediosDifusion")" class="btn">Cancelar</a>
                            </div> <!-- /form-actions -->
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /container -->
</div>
