@model PagedList.IPagedList<Gestion.Models.Producto>
@using PagedList.Mvc;

<div id="productosList">
    <div class="row">
        <div class="span10 offset1">
            <div class="widget widget-table action-table" style="margin-bottom:0">
                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3>Productos</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="span2">@Html.DisplayNameFor(model => model.First().Numero) </th>
                                <th class="span5">@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                                <th class="span1"></th>
                                <th class="span1"></th>
                                <th class="span1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Numero)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td class="centrado">
                                        <a href="Productos/@item.ID/ProductosModulos" class="btn btn-small btn-success btn-actions"><i class="btn-icon-only icon-search"> </i></a>
                                    </td>
                                    <td class="centrado">
                                        <a href="Productos/Edit/@item.ID" class="btn btn-small btn-success btn-actions"><i class="btn-icon-only icon-pencil"> </i></a>
                                    </td>
                                    <td class="centrado">
                                        <a href="Productos/Delete/@item.ID" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#productosList"><i class="btn-icon-only icon-remove"> </i></a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- /widget-content -->
            </div>

        </div>
    </div>
    <div class="row">
        <div class="pagedList span7 offset5" data-gestion-target="#productosList">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>

        <!-- /row -->
    </div>
</div>
<!-- /container -->