@model PagedList.IPagedList<Gestion.Models.Video>
@using PagedList.Mvc;

<div id="videosList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1" style="margin-bottom:-30px">
            <div class="widget widget-table action-table">
                <div class="widget-header">
                    
                    <h3>Videos</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Descripcion) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Fecha)</th>
                                <th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Alias) </th>
                                <th class="col-xs-1"></th>
                                <th class="col-xs-1"></th>
                                <th class="col-xs-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fecha)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Alias)
                                    </td>
                                    <td class="centrado">
                                        @{
                                            var linkVideo = string.Format("{0}/{1}/{2}.{3}", "http://200.49.156.125:57774", "videos_shaman", item.Alias, "mp4");
                                        }
                                        <a href="@linkVideo" target="_blank" class="btn btn-small btn-success btn-actions"><i class="btn-icon-only fa fa-video-camera"></i></a>
                                    </td>
                                    <td class="centrado">
                                        <a href="Videos/Edit/@item.ID" class="btn btn-small btn-success btn-actions"><i class="btn-icon-only fa fa-edit"> </i></a>
                                    </td>
                                    <td class="centrado">
                                        <a href="Videos/Delete/@item.ID" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#videosList"><i class="btn-icon-only fa fa-times"> </i></a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- /widget-content -->
            </div>

        </div>
    </div>
    <div class="row">
        <div class="pagedList col-xs-7 col-xs-offset-5" data-gestion-target="#videosList">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>

        <!-- /row -->
    </div>
    @Html.Partial("_VideosContainer", Model)
</div>
<!-- /container -->

