@model PagedList.IPagedList<Gestion.Models.Video>
@using PagedList.Mvc;

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row" style="margin-top: -20px">
                <div class="span10 offset1">
                    <div class="widget">
                        <div class="widget-header">
                            <i class="fa fa-filter"></i>
                            <h3>Filtros</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content" style="margin-top: -10px; padding-bottom: 10px">
                            <form action="@Url.Action("Index")" method="get" class="searchIndex" data-gestion-ajax="true" data-gestion-target="#videosList" style="margin-bottom:0">
                                <div class="row">
                                    <div class="span3">
                                        <input type="text" class=" span3" id="searchName" name="searchName" placeholder="Buscar..." style="width: 90%">
                                    </div>
                                    <div class="span1">
                                        <button class="btn btn-primary btn-small btn-actions" style="width: 100%" type="submit" id="search_button" name="search_button"><i class="btn-icon-only fa fa-search"></i></button>
                                    </div>
                                    @if (User.IsInRole("Administrador"))
                                    {                             
                                        <div class="span1">
                                            <a href="/Videos/Create" class="btn btn-primary btn-small btn-actions" style="width:80%" id="new_button"><i class="btn-icon-only fa fa-plus"></i></a>
                                        </div>
                                    }
                                </div>
                            </form>
                            <!-- /bar-chart -->
                        </div>
                        <!-- /widget-content -->
                    </div>
                </div>
            </div>
            @if (User.IsInRole("Administrador"))
            {
                @Html.Partial("_Videos", Model)
            }
            else
            {
                @Html.Partial("_VideosClientes", Model)
            }



            <script src="//vjs.zencdn.net/4.2/video.js"></script>

        </div>
        <!-- /main-inner -->
    </div>
</div>
