@model Gestion.Models.Video

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="span6 offset3">
                <div class="widget">
                    <div class="widget-header">
                        <i class="fa fa-key"></i>
                        <h3>Videos</h3>
                    </div>

                    <div class="widget-content">
                            <fieldset>
                                
                                <div class="control-group">
                                    <label class="control-label" for="Descripcion">Descripci&oacute;n</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Descripcion, new { @class ="span5" })
                                        @Html.ValidationMessageFor(model => model.Descripcion,null,new {@class = "span5"})
                                    </div> <!-- /controls -->
                                </div> <!-- /control-group -->

                                <div class="control-group">
                                    <label class="control-label" for="vidCliente">Cliente</label>
                                    <div class="controls">
                                        @Html.DropDownList("vidCliente", new SelectList(ViewBag.Clientes, "ID", "RazonSocial"), "Seleccione Cliente", new { @class = "span5" })
                                    </div> <!-- /controls -->
                                </div> <!-- /control-group -->


                                <div class="control-group">
                                    <label class="control-label" for="esPublico">Es P&uacute;blico?</label>
                                    <div class="controls">
                                        @Html.CheckBoxFor(model => model.esPublico)
                                        @Html.ValidationMessageFor(model => model.esPublico,null, new { @class = "span5" })
                                    </div> <!-- /controls -->
                                </div> <!-- /control-group -->


                                <div class="control-group">
                                    <label class="control-label" for="Alias">Alias</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Alias, new { @class = "span5"})
                                        @Html.ValidationMessageFor(model => model.Alias, null, new { @class = "span5" })
                                    </div> <!-- /controls -->
                                </div> <!-- /control-group -->

                                <div class="control-group">
                                    <label class="control-label" for="Fecha">Fecha</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Fecha, "{0:dd/MM/yyyy}", new { @class = "datepicker span5" })
                                        @Html.ValidationMessageFor(model => model.Fecha, null, new { @class = "span5" })
                                    </div> <!-- /controls -->
                                </div> <!-- /control-group -->

                                <br>

                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary btn-actions">Guardar</button>
                                    <button class="btn">Cancelar</button>
                                </div> <!-- /form-actions -->
                            </fieldset>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- /container -->
</div>

