@model PagedList.IPagedList<Paramedic.Gestion.Model.UserProfile>
@using PagedList.Mvc;

<div id="usuariosList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="widget widget-table action-table">
                <div class="widget-header">
                    <h3>Usuarios</h3>
                </div>

                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().UserName) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Nombre)</th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Apellido) </th>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().Email) </th>
                                <th class="col-xs-1"></th>
                                <th class="col-xs-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Apellido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Edit", "Account", new { id = item.Id })" class="btn btn-small btn-success btn-actions">
                                            <i class="btn-icon-only fa fa-edit"></i>
                                        </a>                                         
                                    </td>
                                    <td class="centrado">
                                        <a href="@Url.Action("Delete", "Account", new { id = item.Id })" class="btn btn-small btn-success btn-actions delete" data-gestion-target="#usuariosList">
                                            <i class="btn-icon-only fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
        <div class="pagedList centered" data-gestion-target="#usuariosList">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
