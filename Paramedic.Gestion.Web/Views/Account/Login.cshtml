                    @Html.PasswordFor(m => m.Password, new { @class = "login password-field", placeholder = "Contraseña" })
                </div>
                <!-- /password -->

            </div> <!-- /login-fields -->
			
            <div class="login-actions">
                <a href="#" class="login-link" id="forgotPassword">Olvidaste tu contraseña?</a>
                <button class="button btn btn-success btn-large btn-actions">Ingresar</button>
            </div> <!-- .actions -->
        }

    </div>
