@model Paramedic.Gestion.Model.LoginModel


<div class="form">

    <div>
        <h2 id="loginTitle">Shaman Gestión</h2>
    </div>

    <div class="thumbnail"><i class="fa fa-lock fa-5x"></i></div>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0)
        {
            <div class="alert alert-danger">
                <strong>Error!</strong> Los datos del usuario son incorrectos.
            </div>

        }

        @Html.TextBoxFor(m => m.UserName, new { autofocus = "", placeholder = "Usuario", })

        @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña" })
        <button>Ingresar</button>

    }

</div>
