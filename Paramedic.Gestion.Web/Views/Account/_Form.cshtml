@model Gestion.Models.RegisterModel

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="span6 offset3">
                <div class="widget">
                    <div class="widget-header">
                        <i class="icon-key"></i>
                        <h3>Usuarios</h3>
                    </div>

                    <div class="widget-content">
                        <fieldset>

                            <div class="control-group">
                                <label class="control-label" for="UserName">Nombre de Usuario</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "span5", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.UserName)
                                </div> <!-- /controls -->
                            </div> <!-- /control-group -->

                            <div class="control-group">
                                <label class="control-label" for="Nombre">Nombre</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Nombre, new { @class = "span5" })
                                    @Html.ValidationMessageFor(model => model.Nombre)
                                </div> <!-- /controls -->
                            </div> <!-- /control-group -->


                            <div class="control-group">
                                <label class="control-label" for="Apellido">Apellido</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Apellido, new { @class = "span5" })
                                    @Html.ValidationMessageFor(model => model.Apellido)
                                </div> <!-- /controls -->
                            </div> <!-- /control-group -->


                            <div class="control-group">
                                <label class="control-label" for="Password">Password</label>
                                <div class="controls">
                                    @Html.PasswordFor(model => model.Password, new { @class = "span5" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div> <!-- /controls -->
                            </div> <!-- /control-group -->

                            <div class="control-group">
                                <label class="control-label" for="ConfirmPassword">Confirmar Password</label>
                                <div class="controls">
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "span5" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </div> <!-- /controls -->
                            </div> <!-- /control-group -->

                            <div class="control-group">
                                <label class="control-label" for="Email">Email</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "span5" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div> <!-- /controls -->
                            </div> <!-- /control-group -->

                            <div class="control-group">
                                <label class="control-label" for="selectedRole">Rol</label>
                                <div class="controls">
                                    @Html.DropDownList("selectedRole", (SelectList)ViewBag.Roles, new { @class = "span5" })
                                </div> <!-- /controls -->
                            </div> <!-- /control-group -->

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary btn-actions">Guardar</button>
                                <button class="btn">Cancelar</button>
                            </div> <!-- /form-actions -->
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- /container -->
</div>



