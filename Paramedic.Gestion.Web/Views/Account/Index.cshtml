@model PagedList.IPagedList<Paramedic.Gestion.Model.UserProfile>
@using PagedList.Mvc;

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row" style="margin-top: -20px">
                <div class="span10 offset1">
                    <div class="widget">
                        <div class="widget-header">
                            <i class="fa fa-filter"></i>
                            <h3>Filtros</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content" style="margin-top: -10px; padding-bottom: 10px">
                            <form action="@Url.Action("Index")" method="get" class="searchIndex" data-gestion-ajax="true" data-gestion-target="#usuariosList" style="margin-bottom:0px">
                                <div class="row">
                                    <div class="span3">
                                        <input type="text" class=" span3" id="searchName" name="searchName" placeholder="Buscar..." style="width:90%">
                                    </div>
                                    <div class="span1">
                                        <button class="btn btn-primary btn-small btn-actions" style="width:100%" type="submit" id="search_button" name="search_button"><i class="btn-icon-only fa fa-search"></i></button>
                                    </div>
                                    <div class="span1">
                                        <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-small btn-actions" style="width:80%" id="new_button">
                                            <i class="btn-icon-only fa fa-plus"></i>
                                        </a>                                        
                                    </div>
                                </div>
                            </form>
                            <!-- /bar-chart -->
                        </div>
                        <!-- /widget-content -->
                    </div>
                </div>
            </div>
            @Html.Partial("_Usuarios", Model)

        </div>
        <!-- /main-inner -->
    </div>
</div>
