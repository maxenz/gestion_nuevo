@model PagedList.IPagedList<Paramedic.Gestion.Model.ClientesGestion>
@using PagedList.Mvc;
@using Paramedic.Gestion.Model.Enums;

<div id="recontactoList">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="widget widget-table action-table">
                <div class="widget-header">

                    <h3>Usuarios</h3>
                </div>

                <div class="widget-content">
                    <table class="table table-striped table-bordered" id="tbGestion">
                        <thead>
                            <tr>
                                <th class="col-xs-2">@Html.DisplayNameFor(model => model.First().UpdatedDate) </th>
                                <th class="col-xs-3">@Html.DisplayNameFor(model => model.First().Cliente)</th>
                                <th class="col-xs-5">@Html.DisplayNameFor(model => model.First().Observaciones) </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fecha)
                                    </td>
                                    <td>
                                        @Html.ActionLink(item.Cliente.RazonSocial, "Edit", "Clientes",new { id = item.Cliente.Id },null)                                        
                                    </td>
                                    @if (item.GestionType == GestionType.Management)
                                    {
                                        <td style="color: #00ba8b !important; font-weight:bold">
                                            @Html.DisplayFor(modelItem => item.Observaciones)
                                        </td>
                                    }
                                    else
                                    {
                                        <td style="color: #e74c3c; font-weight:bold">
                                            @Html.DisplayFor(modelItem => item.Observaciones)
                                        </td>
                                    }
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
    <div class="pagedList centered" data-gestion-target="#recontactoList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
