@model Gestion.Models.ClientesTerminal

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="span6 offset3">
                <div class="widget">
                    <div class="widget-header">
                        <i class="icon-key"></i>
                        <h3>Registro de Terminal</h3>
                    </div>
                    <div class="widget-content">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="TipoTerminalID">Tipo de Terminal</label>
                                <div class="controls">
                                    @Html.DropDownListFor(model => model.TipoTerminalID, new SelectList(ViewBag.TipoTerminales, "id", "descripcion"), new { @class = " span5" })
                                    @Html.ValidationMessageFor(model => model.TipoTerminalID)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="Referencia">Referencia</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Referencia, new { @class = "span5", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Referencia)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="Valor1">Valor 1</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Valor1, new { @class = "span5", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Valor1)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="Valor2">Valor 2</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Valor2, new { @class = "span5", autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.Valor2)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="Valor3">Valor 3</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Valor3)
                                    @Html.ValidationMessageFor(model => model.Valor3)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="Valor4">Valor 4</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Valor4)
                                    @Html.ValidationMessageFor(model => model.Valor4)
                                </div>
                            </div>

                            <br>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary btn-actions">Guardar</button>
                                <button class="btn">Cancelar</button>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

